!!! XML
!!! 1.1
%html{:xmlns => 'http://www.w3.org/1999/xhtml'}
  %head= render :partial => 'layouts/head'
  %body#body{:class => page_class}
    #full
      #header
        %a.title{:href => '/'}
          = image_tag 'title.png', :alt => 'Nex3', :class => 'normal'
          = image_tag 'title_hover.png', :alt => 'Nex3', :class => 'hover'
        .citation== By #{Nex3::Config['author']['name']}
      #main
        #sidebar= render :partial => 'layouts/sidebar'
        #content
          .flash
            - flash_display
          = yield
        #bottom
          - bottom_links
    #signin= link_to glyph, signin_path
