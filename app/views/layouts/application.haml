!!! XML
!!! 1.1
%html{:xmlns => 'http://www.w3.org/1999/xhtml'}
  %head= render :partial => 'layouts/head'
  %body#body{:class => page_class}
    #full
      #header
        %a.title{:href => '/'}
          = image_tag 'title.png', :alt => 'Nex3', :class => 'normal'
          = image_tag 'title_hover.png', :alt => 'Nex3', :class => 'hover'
        .citation By Nathan Weizenbaum
      #main
        #sidebar= render :partial => 'layouts/sidebar'
        #content
          .flash
            - flash_display
          = yield
        #bottom
          - bottom_links
          %a.license{:rel => 'license', :href => "http://creativecommons.org/licenses/by-sa/3.0/"}
            %img{:alt => "Creative Commons Attribution Share-Alike 3.0", :src => "http://i.creativecommons.org/l/by-sa/3.0/80x15.png"}/
    #signin= link_to glyph, signin_path
    - if RAILS_ENV == "production"
      %script{:src => "http://www.google-analytics.com/urchin.js", :type => "text/javascript"}
      %script{:type => "text/javascript"}
        _uacct = "UA-535380-7";
        urchinTracker();
