- if params[:query]
  %h1.center== Search results for "#{h params[:query]}"
- for @post in @posts
  = render :partial => 'post_small'
- if page != 0 || @posts.last != Post.oldest
  .nav
    - if page != 0
      = link_to "&larr; Newer Posts", params.merge(:page => page - 1), :class => 'prev'
    - if @posts.last != Post.oldest
      = link_to "Older Posts &rarr;", params.merge(:page => page + 1), :class => 'next'
  
